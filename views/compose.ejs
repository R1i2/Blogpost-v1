<%-include("partials/header")%>
  <h1>Compose</h1>
  <form action="/compose" method="POST">
    <div class="form-group">
      <label for="title"
        >Title</label>
        <input
          type="text"
          class="form-control"
          name="title"
          id="title"
        />
    </div>
    <div class="form-group">
      <label for="Content"
        >Post</label>
        <textarea
          name="content"
          class="form-control"
          id="Content"
          rows="5"
          cols="30">
        </textarea>
    </div>
    <button
      type="submit"
      name="button"
      class="btn btn-primary btn-light"
    >
      Publish
    </button>
  </form>
<%-include("partials/footer")%>
